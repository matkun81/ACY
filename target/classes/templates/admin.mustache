<html xmlns="http://www.w3.org/1999/html">
<head>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
</head>
<body>
<!-- Optional JavaScript -->
<!-- jQuery first, then Popper.js, then Bootstrap JS -->
<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>
<div class="row">
    <div class="col-md-1"><form action="/" method="get">
        <input type="submit" value="Назад" class="text-center btn btn-primary"/>
    </form></div>

    <div class="col-md-10"><h1 class="text-center">Список сообщений</h1></div>
    <div class="col-md-1 text-right"><form action="/admin/users" method="get">
        <input type="submit" value="Users" class="text-center btn btn-primary"/>
    </form>
    </div>


</div>
<table class="table table-hover" id="adminTable">
    <thead class="thead-dark">
    <tr>
        <th scope="col">#</th>
        <th scope="col">Имя</th>
        <th scope="col">Email</th>
        <th scope="col">Номер телефона</th>
        <th scope="col">Тема вопроса</th>
        <th scope="col">Текст вопроса</th>
        <th scope="col">Удаление сообщения</th>
    </tr>
    </thead>
    <tbody>
{{#messages}}
    <tr>
        <th scope="row">{{id}}</th>
        <td>{{name}}</td>
        <td>{{email}}</td>
        <td>{{numberPhone}}</td>
        <td>{{themeQwest}}</td>
        <td>{{qwest}}</td>
        <td> <form method="post" action="/delete">
            <div class="form-row" align="center">
                <div class="form-group col-md-4">
                    <input type="hidden" class="form-control" name="some" placeholder="ID" value="{{id}}">
                </div>
                <div class="form-group col-md-1"><button type="submit" class="btn btn-primary">Удалить</button></div>
            </div>
        </form></td>
    </tr>
{{/messages}}
    </tbody>
</table>
<div class="row">
    <div class="col-md-4">
    <form method="post" action="/filter">
        <div class="form-row" align="center">
            <div class="form-group col-md-4">
                <input type="text" class="form-control" name="name" placeholder="Name">
            </div>
            <div class="form-group col-md-1"><button type="submit" class="btn btn-primary">Фильтр</button></div>
        </div>
    </form>
    </div>
</div>


</body>
</html>